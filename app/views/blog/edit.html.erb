<h3>Edit your Post </h3>

<%= form_with model: @blog, method: :patch, local: true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>

  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>

  <br>
  <%= form.submit 'Edit Post' %>
<% end %>

<p><%= link_to 'Go Home', blogs_path %></p>